generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WaitlistSubscriber {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  firstName String
  email     String   @unique
  condition String
  source    String?
  consentGiven Boolean

  @@index([createdAt])
}
